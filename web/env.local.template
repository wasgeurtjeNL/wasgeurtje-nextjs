# Lokale test environment voor Stripe payment flow testing
# Kopieer dit naar .env.local en vul de echte waarden in

# API Configuration - gebruik productie API voor data consistency
API_BASE_URL=https://api.wasgeurtje.nl
NEXT_PUBLIC_API_BASE_URL=https://api.wasgeurtje.nl
NEXT_PUBLIC_WORDPRESS_API_URL=https://api.wasgeurtje.nl

# WooCommerce Configuration
WOOCOMMERCE_API_URL=https://api.wasgeurtje.nl/wp-json/wc/v3
WC_API_URL=https://api.wasgeurtje.nl/wp-json/wc/v3

# WooCommerce Consumer Keys - gebruik echte productie keys voor order testing
# KRIJG DEZE VAN: WordPress Admin → WooCommerce → Settings → Advanced → REST API
WOOCOMMERCE_CONSUMER_KEY=ck_your_real_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_real_secret_here

# Stripe Configuration - gebruik TEST keys voor veilige lokale testing
# KRIJG DEZE VAN: Stripe Dashboard → Developers → API keys (TEST mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Debug Settings (extra logging)
DEBUG_STRIPE_FLOW=true
DEBUG_ORDER_CREATION=true
